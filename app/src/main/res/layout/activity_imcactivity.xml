<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".IMCActivity">

    <TextView
        android:id="@+id/lblIMCTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/archivo_black"
        android:shadowColor="#885959"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:textSize="20sp"
        android:text="Calcula tu IMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIMCWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toEndOf="@+id/lblIMCWeight"
        app:layout_constraintTop_toBottomOf="@+id/lblIMCTitle" />

    <EditText
        android:id="@+id/txtIMCHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/lblIMCHeight"
        app:layout_constraintTop_toBottomOf="@+id/txtIMCWeight" />

    <TextView
        android:id="@+id/lblIMCWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/archivo_black"
        android:text="Peso"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIMCTitle" />

    <Button
        android:id="@+id/btnCalcIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="304dp"
        android:backgroundTint="#986E6E"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/archivo_black"
        android:onClick="onClick"
        android:text="Calcular"
        android:textAlignment="center"
        android:textSize="20sp"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblIMCHeight"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/archivo_black"
        android:text="Estatura"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcIMC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIMCWeight"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/lblIMCCalc"
        android:layout_width="307dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcIMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIMCHeight" />

</androidx.constraintlayout.widget.ConstraintLayout>